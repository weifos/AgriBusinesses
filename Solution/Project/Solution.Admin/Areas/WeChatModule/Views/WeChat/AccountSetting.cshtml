@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Css{
    <link href="@(AppGlobal.Res)js/plugins/daterangepicker/daterangepicker.css?@AppGlobal.VNo" rel="stylesheet" />
}

@section Js{
    <script src="@(AppGlobal.Res)js/plugins/jquery-qrcode/jquery.qrcode-0.12.0.min.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/plugins/daterangepicker/moment.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/plugins/daterangepicker/daterangepicker.min.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/plugins/yw-jq-plugin/yw.config.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/plugins/yw-jq-plugin/city-area/area-1.0.js?@(AppGlobal.VNo)"></script>
    <script src="@(AppGlobal.Res)js/plugins/yw-jq-plugin/validate/validates-2.1.3.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/Admin/Areas/WeChat/AccountSetting.js?@AppGlobal.VNo"></script>
}

<div class="content pd5">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@AppGlobal.Admin">首页</a></li>
                        <li class="breadcrumb-item active">配置公众号信息</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <div class="controls box">
        <ul id="Tabs" class="nav nav-tabs">
            <li class="active">
                <a href="#base_panel" data-toggle="tab">基本信息</a>
            </li>
            <li>
                <a href="#qy_panel" data-toggle="tab">企业号信息</a>
            </li>
            <li>
                <a href="#app_merchant_panel" data-toggle="tab">APP商户信息</a>
            </li>
            <li>
                <a href="#wechat_open_setting_panel" data-toggle="tab">开放平台配置</a>
            </li>
            @if (ViewBag.openAcount != null)
            {
                <li>
                    <a href="#wechat_open_account_panel" data-toggle="tab">开放平台账号</a>
                </li>
            }
        </ul>

        <div id="myTabContent" class="tab-content">
            @*基本信息*@
            <div id="base_panel" class="tab-pane active">
                <div class="callout callout-warning mt10">
                    <p>此配置为微信公众号内部服务器配置，需要登录微信公众号，在开发配置里面配置服务器Token,和服务器的URL地址</p>
                </div>
                <table width="100%" border="0" cellpadding="0" cellspacing="0" class="table_s1">
                    <tbody>
                        <tr>
                            <th scope="row" style="width:150px;">微信号：</th>
                            <td>
                                <input type="text" data-val="wechat_no" id="wechat_no" maxlength="50" class="form-control form-control-sm" />
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">公众号名称：</th>
                            <td>
                                <input type="text" data-val="name" id="name" maxlength="30" name="name" class="form-control form-control-sm" />
                            </td>
                        </tr>
                        <tr>
                            <th class="pt8" scope="row">类型：</th>
                            <td>
                                <input type="radio" value="1" data-model-val="1" data-val="type" name="type" /><span>订阅号</span>
                                <input type="radio" value="2" data-model-val="1" data-val="type" name="type" style="margin-left:10px;" /><span>认证订阅号</span>
                                <input type="radio" value="3" data-model-val="1" data-val="type" name="type" style="margin-left:10px;" /><span>服务号</span>
                                <input type="radio" value="4" data-model-val="1" data-val="type" name="type" style="margin-left:10px;" checked="checked" /><span>认证服务号</span>
                            </td>
                        </tr>
                    <tbody id="app">
                        <tr>
                            <th scope="row">公众号AppID：</th>
                            <td>
                                <input type="text" data-val="appid" id="wx_account_appid" class="form-control form-control-sm" />
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">公众号AppSecret：</th>
                            <td>
                                <input type="text" data-val="app_secret" id="wx_account_app_secret" style="width:300px;" class="form-control form-control-sm" />
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">公众号商户号：</th>
                            <td>
                                <input type="text" data-val="mch_id" id="wx_account_mch_id" class="form-control form-control-sm" />
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">公众号API秘钥(支付秘钥)：</th>
                            <td>
                                <input type="text" data-val="pay_key" id="wx_account_pay_key" style="width:300px;" class="form-control form-control-sm" />
                            </td>
                        </tr>
                    </tbody>
                    <tr>
                        <th scope="row">服务器地址：</th>
                        <td>
                            <input type="text" data-val="server_url" id="server_url" maxlength="300" style="width:300px;" class="form-control form-control-sm" />
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Token：</th>
                        <td>
                            <label id="token" data-val="token" style="font-weight:700;color:blue;"></label>
                        </td>
                    </tr>
                </table>
            </div>

            @*企业号信息*@
            <div id="qy_panel" class="tab-pane">
                <div class="callout callout-warning mt10">
                    <p>此配置为微信公众号企业号信息配置</p>
                </div>
                <table width="100%" border="0" cellpadding="0" cellspacing="0" class="table_s1">
                    <tr>
                        <th scope="row" style="width:150px;">企业号corpid：</th>
                        <td>
                            <input type="text" data-val-ent="corpid" class="form-control form-control-sm" maxlength="30" />
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">企业号corpsecret：</th>
                        <td>
                            <input type="text" data-val-ent="corpsecret" style="width:350px;" class="form-control form-control-sm" maxlength="50" />
                        </td>
                    </tr>
                </table>
            </div>

            @*商户信息*@
            <div id="app_merchant_panel" class="tab-pane">
                <div class="callout callout-warning mt10">
                    <p>此配置为微信公众配置对应的APP微信支付信息，需要登录APP的微信商户号获取配置信息</p>
                </div>
                <table width="100%" border="0" cellpadding="0" cellspacing="0" class="table_s1">
                    <tbody>
                        <tr>
                            <th scope="row" style="width:150px;">开放平台商户号：</th>
                            <td>
                                <input type="text" data-app-mh="mch_id" id="mch_id" class="form-control form-control-sm" />
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">商户AppID：</th>
                            <td>
                                <input type="text" data-app-mh="app_id" id="app_id" class="form-control form-control-sm" />
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">商户AppSecret：</th>
                            <td>
                                <input type="text" data-app-mh="app_secret" id="app_secret" style="width:300px;" class="form-control form-control-sm" />
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">商户API秘钥(支付秘钥)：</th>
                            <td>
                                <input type="text" data-app-mh="pay_key" id="pay_key" style="width:300px;" maxlength="50" class="form-control form-control-sm" />
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">是否是子商户：</th>
                            <td>
                                <input data-app-mh="is_child_merchant" id="is_child_merchant" type="checkbox" class="form-control form-control-sm" />是
                            </td>
                        </tr>
                        <tr style="display:none;" name="child_merchant">
                            <th scope="row">子商户app_id：</th>
                            <td>
                                <input type="text" data-app-mh="sub_appid" id="sub_appid" style="width:300px;" maxlength="50" class="form-control form-control-sm" />
                            </td>
                        </tr>
                        <tr style="display:none;" name="child_merchant">
                            <th scope="row">子商户号：</th>
                            <td>
                                <input type="text" data-app-mh="sub_mch_id" id="sub_mch_id" style="width:300px;" maxlength="50" class="form-control form-control-sm" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            @*开放平台配置*@
            <div id="wechat_open_setting_panel" class="tab-pane">
                <div class="callout callout-warning mt10">
                    <p>此配置为微信公众授权给开放平台的服务商，此处的信息需要从第三方开发平台获取，配置成功过后微信会自动推送授权的Ticket过来，然后通过一键授权方式自动授权。</p>
                </div>
                <table width="100%" border="0" cellpadding="0" cellspacing="0" class="table_s1">
                    <tbody>
                        <tr>
                            <th scope="row" style="width:150px;">开放平台AppID：</th>
                            <td>
                                <input type="text" data-open="component_appid" id="component_appid" class="form-control form-control-sm" />
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">开放平台AppSecret：</th>
                            <td>
                                <input type="text" data-open="component_appsecret" id="component_appsecret" style="width:300px;" class="form-control form-control-sm" />
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">开放平台EncodingAESKey：</th>
                            <td>
                                <input type="text" data-open="aes_key" id="aes_key" style="width:350px;" readonly="readonly" value="@ViewBag.AscKey" class="form-control form-control-sm" />
                                <br>消息加密密钥由43位字符组成，可随机修改，字符范围为A-Z，a-z，0-9。
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">开放平台授权票据：</th>
                            <td>
                                <textarea rows="3" cols="40" style="width:350px;" readonly="readonly" class="form-control form-control-sm">@ViewBag.WXOpenTicket</textarea>
                                <br>由微信服务10分钟推送一次。
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">开放平台Token：</th>
                            <td>
                                <input type="text" data-open="token" style="width:200px;" readonly="readonly" value="@ViewBag.OpenToken" class="form-control form-control-sm" />
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">一键授权 ：</th>
                            <td>
                                <a id='selectCgty' href='@ViewBag.url' target="_blank" class='link_blue'>@ViewBag.AuthTitle</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            @*开放平台账号*@
            @if (ViewBag.openAcount != null)
            {
                <div id="wechat_open_account_panel" class="tab-pane">
                    <table width="100%" border="0" cellpadding="0" cellspacing="0" class="table_s1">
                        <tbody>
                            <tr>
                                <th scope="row">公众号图像：</th>
                                <td>
                                    <div class="picThumbBar disBlock" style="width:120px;height:120px;">
                                        <img src="" style="max-height:120px;" id="auth_accoount_img" />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">公众号昵称：</th>
                                <td>
                                    <label data-open-account="nick_name"></label>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">公众号：</th>
                                <td>
                                    <label data-open-account="wechat_no"></label>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">二维码：</th>
                                <td>
                                    <div id="qrcode_url"> </div>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">原始ID：</th>
                                <td>
                                    <label data-open-account="original_id"></label>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">主体名称：</th>
                                <td>
                                    <label data-open-account="principal_name"></label>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            }
        </div>

        <div class="form-actions">
            <input type="hidden" id="Ticket" value="@ViewBag.Ticket" />
            <input type="hidden" id="defimgurl" value="@ViewBag.defimgurl" />
            <input type="hidden" id="wx_account_imgurl" value="@ViewBag.wx_account_imgurl" />

            <input type="hidden" id="account" value="@ViewBag.account" />
            <input type="hidden" id="account_ent" value="@ViewBag.accountEnt" />
            <input type="hidden" id="merchant" value="@ViewBag.merchant" />
            <input type="hidden" id="opensetting" value="@ViewBag.opensetting" />
            <input type="hidden" id="openAcount" value="@ViewBag.openAcount" />
            <input type="button" class="btn btn-info" value="重新加载" onclick="javascript: window.location.reload();" />
            <input type="button" class="btn btn-cancel" value="返 回" id="BackBtn" onclick="javascript: history.go(-1);" />
            <input type="button" class="btn btn-small btn-primary btn-save" value="保 存" id="SaveBtn" />
        </div>
    </div>
</div>
