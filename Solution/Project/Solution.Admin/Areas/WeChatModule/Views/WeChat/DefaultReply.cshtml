@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Js{
    <script src="@(AppGlobal.Res)js/plugins/template/template-web.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/plugins/template/template.helper.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/plugins/yw-jq-plugin/datagrid/datagrid-1.0.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/plugins/yw-jq-plugin/yw.config.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/plugins/yw-jq-plugin/validate/validates-2.1.3.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/Admin/Areas/WeChat/DefaultReply.js?@AppGlobal.VNo"></script>
}

<div class="content pd5">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@AppGlobal.Admin">首页</a></li>
                        <li class="breadcrumb-item active">默认回复设置</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <div class="controls box">
        <table class="table_s1 mt30">
            <tr>
                <th scope="row">关注时回复设置：</th>
                <td>
                    <input type="hidden" value="" id="a_reply_value" name="a_reply_value" data-val="a_reply_value" />
                    <input type="text" id="attention_content" readonly="readonly" maxlength="50" value="@ViewBag.attention_content" class="form-control form-control-sm" />
                    &nbsp;<a id="selectAttention" href="javascript:;">选择关键词</a> <br>
                    <input type="checkbox" name="a_reply_isopen" id="a_reply_isopen" data-val="a_reply_isopen" />&nbsp;开启关注时回复
                </td>
            </tr>
            <tr>
                <th scope="row">无匹配回复设置：</th>
                <td>
                    <input type="hidden" id="d_reply_value" name="d_reply_value" data-val="d_reply_value" />
                    <input type="text" data-val="nomatch_content" id="nomatch_content" readonly="readonly" maxlength="50" value="@ViewBag.nomatch_content" class="form-control form-control-sm" />
                    &nbsp;<a id="selectNoMatch" href="javascript:;">选择关键词</a> <br>
                    <input type="checkbox" name="d_reply_isopen" data-val="d_reply_isopen" />&nbsp;开启无匹配回复
                </td>
            </tr>
            <tr>
                <th scope="row">默认LBS查询范围：</th>
                <td>
                    <input type="text" style="width:100px;" data-val="lbs_distance" id="lbs_distance" maxlength="5" value="10000" name="lbs_distance" class="form-control form-control-sm">
                    <span id="unit">&nbsp;单位(米)</span>
                    <br>当用户发送地理位置定位时在此范围内的商家可被推送给用户，设置为0则不限制范围
                </td>
            </tr>
        </table>

        <div class="form-actions">
            <input type="hidden" id="entity" value="@ViewBag.entity" />
            <input type="button" class="btn btn-info" value="重新加载" onclick="javascript: window.location.reload();" />
            <input type="button" class="btn btn-cancel" value="返 回" id="BackBtn" onclick="javascript: history.go(-1);" />
            <input type="button" class="btn btn-small btn-primary btn-save" value="保 存" id="SaveBtn" />
        </div>
    </div>

    <script type="text/html" id="template">
        {{each data as obj i}}
        <tr data-id="{{obj.id}}">
            <td>
                <input name="radio" type="radio" data-id="{{obj.id}}" data-text="{{obj.keywords}}"/>
            </td>
            <td> {{obj.keywords}} </td>
            <td> {{obj.created_date | ChangeCompleteDateFormat}}  </td>
        </tr>
        {{/each}}
    </script>
</div>

