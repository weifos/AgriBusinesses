@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Js{
    <script src="@(AppGlobal.Res)js/plugins/yw-jq-plugin/yw.config.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/plugins/yw-jq-plugin/validate/validates-2.1.3.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/Admin/Areas/System/SysMenuForm.js?@AppGlobal.VNo"></script>
}

<div class="content pd5" >
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@AppGlobal.Admin">首页</a></li>
                        <li class="breadcrumb-item"><a href="@(AppGlobal.Admin)SystemModule/System/SysMenuManage">系统菜单</a></li>
                        <li class="breadcrumb-item active">@(ViewBag.entity == null ? "添加" : "修改")系统菜单</li>
                    </ol>
                </div> 
            </div>
        </div>
    </section>

    <div class="controls box">
        <table class="table_s1 mt30" >
            <tr>
                <th scope="row">所属分类：</th>
                <td>
                    <select name="parent_id" id="parent_id" data-val="parent_id" class="form-control form-control-sm" >
                        @foreach (SysModelMenu m in ViewBag.Parents)
                        {
                            <option value="@m.id" data-model="@m.model">@m.name</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <th scope="row">菜单名称：</th>
                <td>
                    <input type="text" maxlength="50" data-val="name" class="form-control form-control-sm" />
                </td>
            </tr>
            <tr>
                <th scope="row">菜单编号：</th>
                <td>
                    <input type="text" maxlength="50" id="serial_no" data-val="serial_no" class="form-control form-control-sm" />
                </td>
            </tr>
            <tr>
                <th scope="row">链接地址：</th>
                <td>
                    <input type="text" maxlength="100" id="action_url" data-val="action_url" style="width:400px;" class="form-control form-control-sm" />
                </td>
            </tr>
            <tr>
                <th scope="row">菜单样式：</th>
                <td>
                    <input type="text" maxlength="50" id="menu_class" data-val="menu_class" class="form-control form-control-sm" />
                </td>
            </tr>
            <tr>
                <th scope="row">排序索引：</th>
                <td>
                    <input type="text" maxlength="50" id="order_index" data-val="order_index" class="form-control form-control-sm"  />
                </td>
            </tr>
            <tr>
                <th scope="row" class="pt8">状态：</th>
                <td>
                    <input id="IsEnable" type="checkbox" checked="checked" data-val="is_enable"  />
                    <label>是否可用</label>
                </td>
            </tr>
        </table>
        
        <div class="form-actions">
            <input type="hidden" id="entity" value="@ViewBag.entity" />
            <input type="button" class="btn btn-info" value="重新加载" onclick="javascript: window.location.reload();" />
            <input type="button" class="btn btn-cancel" value="返 回" id="BackBtn" onclick="javascript: history.go(-1);" />
            <input type="button" class="btn btn-small btn-primary btn-save" value="保 存" id="SaveBtn" />
        </div>
    </div>

</div>
