@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Js{
    <script src="@(AppGlobal.Res)js/plugins/yw-jq-plugin/yw.config.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/plugins/yw-jq-plugin/validate/validates-2.1.3.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/Admin/Areas/System/ConfigParamForm.js?@AppGlobal.VNo"></script>
}

<div class="content pd5">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@AppGlobal.Admin">首页</a></li>
                        <li class="breadcrumb-item"><a href="@(AppGlobal.Admin)SystemModule/System/ConfigParamManage">数据字典</a></li>
                        <li class="breadcrumb-item active">@(ViewBag.entity == null ? "添加" : "修改")数据字典</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <div class="controls box">
        <table class="table_s1 mt30">
            <tr> 
                <th scope="row">参数KEY：</th>
                <td>
                    @if (ViewBag.entity != null)
                    {
                        <label style="color:#dd5600;font-weight:bold; font-size:14px;">@ViewBag.key</label>
                    }
                    else
                    {
                        <input type="text" maxlength="50" id="config_key" data-val="config_key" class="form-control form-control-sm" />
                    }
                </td>
            </tr>
            <tr>
                <th scope="row">菜单名称：</th>
                <td>
                    <input type="text" maxlength="50" id="config_value" data-val="config_value" class="form-control form-control-sm" />
                </td>
            </tr>  
            <tr>
                <th scope="row">状态：</th>
                <td>
                    <input type="checkbox" checked="checked" data-val="is_enable" id="is_enable" />
                    <label>是否可用</label>
                </td>
            </tr>
            <tr>
                <th scope="row">备注说明：</th>
                <td>
                    <textarea style="width:500px;" data-val="remarks" id="remarks" cols="20" rows="3" class="form-control form-control-sm"></textarea>
                </td>
            </tr> 
        </table>

        <div class="form-actions">
            <input type="hidden" id="entity" value="@ViewBag.entity" />
            <input type="button" class="btn btn-info" value="重新加载" onclick="javascript: window.location.reload();" />
            <input type="button" class="btn btn-cancel" value="返 回" id="BackBtn" onclick="javascript: history.go(-1);" />
            <input type="button" class="btn btn-small btn-primary btn-save" value="保 存" id="SaveBtn" />
        </div>
    </div>

</div>
