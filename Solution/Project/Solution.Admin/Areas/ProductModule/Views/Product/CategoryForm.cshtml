@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Solution.Entity.ProductModule;

@section Css{
    <link href="@(AppGlobal.Res)js/plugins/chosen_v1.8.7/chosen.css?@AppGlobal.VNo" rel="stylesheet" />
}
@section Js{
    <script src="@(AppGlobal.Res)js/plugins/yw-jq-plugin/yw.config.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/plugins/chosen_v1.8.7/chosen.jquery.min.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/plugins/yw-jq-plugin/validate/validates-2.1.3.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/Admin/Areas/Product/CategoryForm.js?@AppGlobal.VNo"></script>
}

<div class="content pd5">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@AppGlobal.Admin">首页</a></li>
                        <li class="breadcrumb-item"><a href="@(AppGlobal.Admin)ProductModule/Product/CategoryManage">商品分类管理</a></li>
                        <li class="breadcrumb-item active">@(ViewBag.entity == null ? "添加" : "修改")公司信息</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <div class="controls box">
        <table class="table_s1 wfull mt30">
            <tr>
                <th scope="row" style="width:120px;">所属类别：</th>
                <td>
                    <select name="parent_id" id="parent_id" data-val="parent_id" class="form-control form-control-sm w178 chosen-select" data-placeholder="选择类别">
                        @foreach (ProductCatg c in ViewBag.Parents)
                        {
                            <option value="@c.id">@c.name</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <th scope="row">类别名称：</th>
                <td>
                    <input type="text" maxlength="50" data-val="name" class="form-control form-control-sm" />
                </td>
            </tr>
            <tr>
                <th scope="row">类别编号：</th>
                <td>
                    <input type="text" maxlength="50" id="serial_no" data-val="serial_no" class="form-control form-control-sm" />
                </td>
            </tr>
            <tr>
                <th scope="row">状态设置：</th>
                <td>
                    <input type="checkbox" data-val="is_show" checked="checked" />是否显示
                </td>
            </tr>
            <tr>
                <th scope="row">显示排序：</th>
                <td>
                    <input type="text" maxlength="50" id="order_index" data-val="order_index" class="form-control form-control-sm" />
                </td>
            </tr>
        </table>

        <div class="form-actions">
            <input type="hidden" id="entity" value="@ViewBag.entity" />
            <input type="button" class="btn btn-info" value="重新加载" onclick="javascript: window.location.reload();" />
            <input type="button" class="btn btn-cancel" value="返 回" id="BackBtn" onclick="javascript: history.go(-1);" />
            <input type="button" class="btn btn-small btn-primary btn-save" value="保 存" id="SaveBtn" />
        </div>
    </div>

</div>

