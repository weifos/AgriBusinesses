@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Solution.Entity.OrgModule;
@section Css{
    <link href="@(AppGlobal.Res)js/plugins/chosen_v1.8.7/chosen.css?@AppGlobal.VNo" rel="stylesheet" />
}
@section Js{
    <script src="@(AppGlobal.Res)js/plugins/yw-jq-plugin/yw.config.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/plugins/chosen_v1.8.7/chosen.jquery.min.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/plugins/yw-jq-plugin/validate/validates-2.1.3.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/Admin/Areas/Org/PostForm.js?@AppGlobal.VNo"></script>
}

<div class="content pd5">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@AppGlobal.Admin">首页</a></li>
                        <li class="breadcrumb-item"><a href="@(AppGlobal.Admin)OrgModule/Org/DepartmentManage">岗位管理</a></li>
                        <li class="breadcrumb-item active">@(ViewBag.entity == null ? "添加" : "修改")岗位</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <div class="controls box">
        <table class="table_s1 mt30">
            <tr>
                <th scope="row" style="width:120px;">所属公司：</th>
                <td>
                    <select name="parent_id" id="company_id" data-val="company_id" class="form-control form-control-sm w240 chosen-select">
                        @foreach (Company m in ViewBag.Parents)
                        {
                            <option value="@m.id">@m.name</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <th scope="row" style="width:120px;">上级岗位：</th>
                <td>
                    <select name="parent_id" id="parent_id" data-val="parent_id" class="form-control form-control-sm w240 chosen-select">
                        @foreach (OrgPost d in ViewBag.Posts)
                        {
                            <option value="@d.id">@d.name</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <th scope="row">岗位名称：</th>
                <td>
                    <input type="text" maxlength="50" data-val="name" class="form-control form-control-sm" />
                </td>
            </tr>
            <tr>
                <th scope="row">岗位编号：</th>
                <td>
                    <input type="text" maxlength="50" data-val="no" class="form-control form-control-sm" />
                </td>
            </tr>
            <tr>
                <th scope="row">备注信息：</th>
                <td>
                    <textarea data-val="remarks" rows="3" cols="30" class="form-control form-control-sm" style="width:400px;"></textarea>
                </td>
            </tr>
            <tr>
                <th scope="row">显示排序：</th>
                <td>
                    <input type="text" maxlength="50" data-val="order_index" class="form-control form-control-sm" value="10000" />
                </td>
            </tr>
        </table>

        <div class="form-actions">
            <input type="hidden" id="entity" value="@ViewBag.entity" />
            <input type="button" class="btn btn-info" value="重新加载" onclick="javascript: window.location.reload();" />
            <input type="button" class="btn btn-cancel" value="返 回" id="BackBtn" onclick="javascript: history.go(-1);" />
            <input type="button" class="btn btn-small btn-primary btn-save" value="保 存" id="SaveBtn" />
        </div>
    </div>
</div>