@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Js{
    <script src="@(AppGlobal.Res)js/Config.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/plugins/yw-jq-plugin/yw.config.js?@AppGlobal.VNo"></script> 
    <script src="@(AppGlobal.Res)js/plugins/yw-jq-plugin/validate/validates-2.1.3.js?@AppGlobal.VNo"></script>
    <script src="@(AppGlobal.Res)js/Admin/Areas/Distribution/LogisticsCompanyForm.js?@AppGlobal.VNo"></script>
}

<div class="content pd5">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@AppGlobal.Admin">首页</a></li>
                        <li class="breadcrumb-item"><a href="@(AppGlobal.Admin)ProductModule/Product/BrandManage">物流公司管理</a></li>
                        <li class="breadcrumb-item active">@(ViewBag.entity == null ? "添加" : "修改")物流公司</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <div class="controls box">
        <table class="table_s1 wfull mt30">
            <tr>
                <th scope="row">物流公司名称：</th>
                <td>
                    <input type="text" maxlength="50" data-val="name" id="name" class="form-control form-control-sm" />
                </td>
            </tr>
            <tr>
                <th scope="row">快递100Code：</th>
                <td>
                    <input type="text" maxlength="50" id="code_hundred" data-val="code_hundred" class="form-control form-control-sm" />
                </td>
            </tr>
            <tr>
                <th scope="row">淘宝Code：</th>
                <td>
                    <input type="text" maxlength="50" id="code_taobao" data-val="code_taobao" class="form-control form-control-sm" />
                </td>
            </tr>
            <tr>
                <th scope="row">公司网址：</th>
                <td>
                    <input type="text" maxlength="50" id="site_url" data-val="site_url" class="form-control form-control-sm w240" />
                </td>
            </tr>
            <tr>
                <th scope="row">显示排序：</th>
                <td>
                    <input type="text" maxlength="50" id="order_index" data-val="order_index" class="form-control form-control-sm" />
                </td>
            </tr>
        </table>

        <div class="form-actions">
            <input type="hidden" id="entity" value="@ViewBag.entity" />
            <input type="button" class="btn btn-info" value="重新加载" onclick="javascript: window.location.reload();" />
            <input type="button" class="btn btn-cancel" value="返 回" id="BackBtn" onclick="javascript: history.go(-1);" />
            <input type="button" class="btn btn-small btn-primary btn-save" value="保 存" id="SaveBtn" />
        </div>
    </div>
</div>