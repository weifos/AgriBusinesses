@{
    Layout = "";
}
<html lang="en-us" style="display: block;">
<head>
    <title>微狐BPM管理系统</title>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta content="text/html; charset=utf-8" http-equiv="Content-type">
    <meta content="text/javascript" http-equiv="Content-Script-Type">
    <meta content="yes" name="apple-mobile-web-app-capable">
    <meta content="default" name="apple-mobile-web-app-status-bar-style">
    <meta content="notranslate" value="notranslate" name="google">
    @await Html.PartialAsync("~/Views/Shared/_Script.cshtml")
    <script src="@(AppGlobal.Res)js/Config.js?@(AppGlobal.VNo)"></script>
    <script src="@(AppGlobal.Res)js/plugins/crypto/jsencrypt.js?@(ViewBag.VNo)"></script>
    <script src="@(AppGlobal.Res)js/plugins/iCheck/icheck.min.js?@(AppGlobal.VNo)"></script>
    <script src="@(AppGlobal.Res)js/Admin/PassPort/Login.js?@(AppGlobal.VNo)"></script>
    <link href="@(AppGlobal.Res)js/plugins/iCheck/square/blue.css?@(AppGlobal.VNo)" rel="stylesheet">
    <style type="text/css">
        .form-control-feedback { position: absolute; top: 0; right: 0; z-index: 2; display: block; width: 34px; height: 34px; line-height: 34px; text-align: center; pointer-events: none; }
        .form-group { margin-bottom: 1rem; position: relative; }
    </style>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="http://www.weifos.com"><b>Weifos</b>BPM</a>
        </div>

        <div class="card" style="width:360px;">
            <div class="login-box login-card-body">
                <p class="login-box-msg">Sign in to start your session</p>
                <div class="alert alert-danger alert-dismissible" style="display:none;">
                    <i class="icon fa fa-ban"></i> <span>用户或密码错误</span>
                </div>
                <div class="alert alert-success alert-dismissible" style="display:none;">
                    <i class="icon fa fa-check"></i> <span>登录成功</span>
                </div>
                <form>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control wfull" placeholder="UserName" id="login_name" maxlength="20" />
                        <span class="fa fa-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="password" class="form-control wfull" placeholder="Password" id="psw" maxlength="30" />
                        <span class="fa fa-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-8" style="padding-left:15px;">
                            <div class="checkbox icheck">
                                <label>
                                    <input type="checkbox"> Remember Me
                                </label>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="social-auth-links text-center mb-3">
                    <a href="javascript:;" class="btn btn-block btn-primary" name="login_btn">
                        <i class="fa fa-hand-o-right mr-2"></i> Log in to your account
                    </a>
                    <a href="javascript:;" class="btn btn-block btn-danger" name="refresh_btn">
                        <i class="fa fa-repeat mr-2"></i> Refresh the redis cache
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            })
        })
    </script> 
    <input id="publicKey" type="hidden" value="@ViewBag.publicKey" />

</body>
</html>